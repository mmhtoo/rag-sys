generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Directory {
  id String @id @default(cuid())
  name String 
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  parentDir Directory? @relation("ParentChild", fields: [parentDirId], references: [id], onDelete: Cascade)
  parentDirId String? @map("parent_dir_id")
  childDirs Directory[] @relation("ParentChild")
  childFiles File[] @relation("Directory_Files")
  
  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  pathname String? @default("/")

  @@index([name, createdAt, createdBy,pathname])
  @@map("directories")
}

enum FileStatus {
  upload_queued
  upload_failed
  upload_completed
  sync_queued
  sync_failed
  sync_completed
  unknown
}

model File {
  id String @id @default(cuid())
  name String
  resourcePath String @map("resource_path")
  size Int
  contentType String @map("content_type")
  metadata Json

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  parentDir Directory? @relation("Directory_Files", fields: [parentDirId], references: [id]) 
  parentDirId String @map("parent_dir_id")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  status FileStatus? @default(unknown)

  @@map("files")
  @@index([name, createdAt, createdBy, contentType])
}
